/* pages/admin/reservationDetail/reservationDetail.wxss */
.container {
  padding: 20rpx;
}

.date-picker {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.route-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.stats {
  display: flex;
  flex-wrap: wrap;
}

.stats text {
  width: 50%;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.loading, .no-data {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.no-data image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
