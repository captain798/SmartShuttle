/* 页面容器样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  flex-direction: column;
  display: flex;
  justify-content: flex-start;  
}


.date-picker {
  display: flex;
  justify-content: space-between;  
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  width: 100%;  
  box-sizing: border-box;  
}


.date-label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.selected-date {
  font-size: 32rpx;
  color: #1a3c4c;
}

/* 导出按钮样式 */
.export-btn {
  margin: 60rpx auto;
  width: 80%;
  background: linear-gradient(90deg, #44e09e 0%, #2ca97c 100%); /* 保留渐变背景 */
  color: white; /* 文字改为白色 */
  border-radius: 50rpx;
  font-size: 36rpx;
  line-height: 90rpx;  
  box-shadow: 0 6rpx 12rpx rgba(68, 224, 158, 0.3); /* 阴影颜色与渐变背景协调 */
  border: none; /* 移除边框 */
  position: relative;  
  z-index: 9999;  
}

/* 加载状态样式 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 错误提示样式 */
.error-tip {
  color: #ff4d4f;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}

/* 按钮禁用状态样式 */
.disabled-btn {
  opacity: 0.6;
}