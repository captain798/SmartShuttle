/* 优化宽度分布后的选择器卡片样式 */
/* 优化选择卡片水平分布 */
.filter-container {
  display: flex;
  flex-wrap: wrap; /* 允许换行 */
  justify-content: flex-start; /* 左对齐 */
  gap: 20rpx; /* 设置间距 */
  margin: 24rpx 0;
  padding: 0 20rpx;
}

.filter-item {
  flex: 0 0 calc(50% - 10rpx); /* 每行显示2个，考虑间距 */
  min-width: 200rpx;
  max-width: none; /* 取消最大宽度限制 */
  padding: 24rpx 0;
  margin: 0;
  text-align: center;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.08);
  border: 1rpx solid #e8e8e8;
  font-size: 30rpx;
  color: #555;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* 选中状态优化 */
.filter-item.active {
  background: linear-gradient(135deg, #1D953F, #2BB24C);
  color: white;
  border-color: transparent;
  box-shadow: 0 6rpx 24rpx rgba(29,149,63,0.3);
}

/* 点击效果优化 */
.filter-item:active {
  transform: translateY(2px) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

/* 添加微妙的悬浮效果 */
.filter-item:hover {
  transform: translateY(-2px);
  box-shadow: 0 8rpx 28rpx rgba(0,0,0,0.12);
}