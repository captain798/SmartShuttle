/* 统一页面背景和容器样式 */
.page-bg {
  min-height: 100vh;
  background: #f5f7fa;
}

.container {
  padding: 20rpx 0 100rpx 0;
  max-width: 96vw;
  margin: 0 auto;
}

/* 班次列表整体样式 */
.schedule-list {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

/* 班次卡片统一设计 */
.schedule-item {
  width: 92%;
  margin: 20rpx auto;
  padding: 28rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  border: 1rpx solid #f0f0f0;
}

/* 卡片悬停效果 */
.schedule-item:active {
  transform: translateY(2px);
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.1);
  background: #f9f9f9;
}

/* 统一字体和间距 */
.route-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.schedule-info {
  margin: 16rpx 0;
  color: #666;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 状态标签统一 */
.status {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 底部信息样式 */
.schedule-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 箭头图标统一 */
.arrow-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}



