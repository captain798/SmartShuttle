/* pages/driver/driver-list/driver-list.wxss */
.container {
    padding: 28rpx 20rpx 20rpx 20rpx;
    background: linear-gradient(135deg,#e9f6ff 0%, #f5f7fa 100%);
    min-height: 100vh;
  }
  
  /* 司机信息卡片样式 */
  .driver-card.driver-row {
    display: flex;
    align-items: center;
    padding: 36rpx 34rpx;
    width: 100%;
    background: linear-gradient(90deg, #91e7e3 0%, #b6e2fc 100%);
    border-radius: 22rpx;
    box-shadow: 0 8rpx 24rpx rgba(39, 174, 255, 0.10);
    box-sizing: border-box;
    margin-bottom: 38rpx;
  }
  
  /* 头像样式 */
  .avatar {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    background: #fff;
    border: 4rpx solid #b8e0ef;
    object-fit: cover;
    margin-right: 38rpx;
    box-shadow: 0 3rpx 12rpx 0 rgba(0,0,0,0.07);
  }
  
  /* 信息区域 */
  .driver-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .info-item {
    font-size: 34rpx;
    color: #222;
    margin-bottom: 12rpx;
    font-weight: 600;
    letter-spacing: 1rpx;
    display: block;
  }
  
  /* 功能菜单卡片 */
  .form-card {
    width: 100%;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0 6rpx 20rpx rgba(39, 174, 255, 0.08);
    padding: 30rpx 14rpx 18rpx 14rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
  }
  
  /* 功能项列表 */
  .action-list {
    display: flex;
    flex-direction: column;
    gap: 2rpx;
  }
  
  /* 单个功能项样式 */
  .action-item {
    display: flex;
    align-items: center;
    padding: 28rpx 10rpx 24rpx 6rpx;
    border-bottom: 1px solid #f1f1f1;
    background: transparent;
    cursor: pointer;
    position: relative;
    transition: background .15s;
  }
  .action-item:last-child {
    border-bottom: none;
  }
  .action-item:active {
    background: #f6fafd;
  }
  
  /* 功能项图标样式 */
  .action-icon {
    width: 54rpx;
    height: 54rpx;
    margin-right: 24rpx;
    flex-shrink: 0;
    border-radius: 12rpx;
    background: linear-gradient(135deg, #e4f1ff 50%, #f7fafd 100%);
    box-shadow: 0 1rpx 5rpx 0 rgba(90,156,255,0.04);
  }
  
  /* 功能项文字样式 */
  .action-text {
    font-size: 32rpx;
    color: #232a32;
    flex: 1;
    font-weight: 600;
    letter-spacing: 1rpx;
  }
  
  /* 箭头样式 */
  .arrow-icon {
    width: 34rpx;
    height: 34rpx;
    margin-left: 16rpx;
    opacity: 0.5;
    flex-shrink: 0;
  }