/* 页面容器 */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 班次卡片 */
.schedule-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.schedule-card .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.schedule-card .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.schedule-card .status {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.schedule-card .status.normal {
  background-color: #07c160;
  color: #fff;
}

.schedule-card .status.canceled {
  background-color: #f76260;
  color: #fff;
}

.schedule-card .status.delayed {
  background-color: #f8ac59;
  color: #fff;
}

.schedule-card .info-row {
  display: flex;
  margin-bottom: 16rpx;
}

.schedule-card .label {
  color: #999;
  width: 140rpx;
}

.schedule-card .value {
  flex: 1;
  color: #333;
}

.schedule-card .stats {
  display: flex;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.schedule-card .stat-item {
  flex: 1;
  text-align: center;
}

.schedule-card .stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.schedule-card .stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 乘客列表 */
.passenger-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.list-header {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
}

.passenger-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.passenger-item .name {
  flex: 1;
  font-size: 28rpx;
}

.passenger-item .seat {
  width: 160rpx;
  color: #999;
  font-size: 24rpx;
}

.passenger-item .status {
  width: 100rpx;
  text-align: right;
  font-size: 24rpx;
}

.passenger-item .status.active {
  color: #1989fa;
}

.passenger-item .status.checked_in {
  color: #07c160;
}

.passenger-item .status.canceled {
  color: #f76260;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
}