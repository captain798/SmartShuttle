/* 页面容器样式 */
.page-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 预约卡片样式 */
.reservation-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 卡片头部样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 行程信息容器 */
.route-container {
  margin: 20rpx 0;
}

/* 路线点样式 */
.route-point {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

/* 时间线圆点 */
.timeline-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.timeline-dot.start {
  background-color: #07c160; /* 起点绿色 */
}

.timeline-dot.end {
  background-color: #e64340; /* 终点红色 */
}

/* 时间线 */
.timeline-line {
  height: 40rpx;
  width: 2rpx;
  background-color: #ccc;
  margin-left: 7rpx;
}

/* 详细信息容器 */
.detail-container {
  margin-top: 20rpx;
}

/* 详情项样式 */
.detail-item {
  display: flex;
  margin: 10rpx 0;
}

.detail-label {
  color: #999;
  margin-right: 10rpx;
}

/* 二维码容器 */
.qr-code-container {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.qr-code {
  width: 200rpx;
  height: 200rpx;
}