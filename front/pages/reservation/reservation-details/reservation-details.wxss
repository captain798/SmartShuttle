/* 页面容器样式优化 */
.page-container {
  padding: 20rpx;
  background-color: #f8f9fa; /* 更柔和的背景色 */
}

/* 预约卡片样式优化 */
.reservation-card {
  background-color: #fff;
  border-radius: 16rpx; /* 更大的圆角 */
  padding: 24rpx; /* 增加内边距 */
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); /* 更柔和的阴影 */
}

/* 卡片头部样式优化 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee; /* 添加分割线 */
}

/* 行程信息容器优化 */
.route-container {
  margin: 24rpx 0;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

/* 详情项样式优化 */
.detail-item {
  display: flex;
  margin: 16rpx 0;
  padding: 12rpx 0;
  border-bottom: 1rpx dashed #eee; /* 虚线分割线 */
}

/* 状态文本样式优化 */
.reservation-status {
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 位置内容样式优化 */
.location-content {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 详情值样式优化 */
.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 二维码容器 */
.qr-code-container {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center; /* 新增垂直居中 */
  height: 400rpx; /* 新增固定高度 */
}

.qr-code {
  width: 200rpx;
  height: 200rpx;
}


/* 预约日期文本样式 */
.reservation-date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 状态文本样式 */
.reservation-status {
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 根据不同状态设置不同颜色 */
.reservation-status[status="canceled"] {
  background-color: #f8f8f8;
  color: #999;
}

.reservation-status[status="confirmed"] {
  background-color: #e8f5e9;
  color: #07c160;
}

/* 位置内容样式 */
.location-content {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

/* 详情值样式 */
.detail-value {
  font-size: 28rpx;
  color: #333;
}

/* 二维码容器动画效果 */
.qr-code-container {
  transition: all 0.3s ease;
}

.qr-code-container:active {
  transform: scale(1.05);
}