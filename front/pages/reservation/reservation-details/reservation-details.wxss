/* pages/reservation/reservation-details/reservation-details.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 预约卡片 */
.reservation-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 日期行 */
.reservation-date-row {
  display: flex;
  align-items: center;
}

/* 日期图标 */
.reservation-date-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 日期文本 */
.reservation-date-text {
  font-size: 28rpx;
  color: #666;
}

/* 状态标签 */
.reservation-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  background-color: #10b16a;
  color: #fff;
}

/* 行程路线容器 */
.route-container {
  position: relative;
  padding-left: 40rpx;
  margin-bottom: 28rpx;
}

/* 路线点 */
.route-point {
  position: relative;
  margin-bottom: 30rpx;
}

/* 时间线 */
.timeline-line {
  position: absolute;
  left: -30rpx;
  top: 24rpx;
  bottom: 54rpx;
  width: 4rpx;
  background-color: #E5E5E5;
}

/* 位置文本 */
.location-content {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 详细信息容器 */
.detail-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx 40rpx;
  margin-bottom: 28rpx;
}

/* 详细信息项 */
.detail-item {
  display: flex;
  align-items: center;
}

/* 标签 */
.detail-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

/* 值 */
.detail-value {
  font-size: 26rpx;
  color: #333;
}

/* 二维码容器 */
.qr-code-container {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

/* 二维码图片 */
.qr-code {
  width: 300rpx;
  height: 300rpx;
}