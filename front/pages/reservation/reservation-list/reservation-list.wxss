/* 页面背景 */
.my-reservation-bg {
  min-height: 100vh;
  background: linear-gradient(135deg, #f6fbf9 0%, #e6f2ef 100%);
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 滚动 */
.content-scroll {
  max-width: 98vw;
  margin: 0 auto;
  padding-bottom: 320rpx;
  overflow-y: auto;
  max-height: calc(100vh - 180rpx);
  /* 优化滚动 */
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

/* 预约状态选择器 */
.status-picker {
  width: 92vw;
  margin: 38rpx auto 24rpx auto;
  border-radius: 24rpx;
  background: #f4faf7;
  box-shadow: 0 8rpx 28rpx #3dc9891c;
  display: flex;
  align-items: center;
  border: 2rpx solid #d2eee6;
  min-height: 100rpx;
  position: relative;
  overflow: hidden;
}
/* picker内部显示区域样式 */
.status-picker-display {
  display: flex;
  align-items: center;
  font-size: 44rpx;
  color: #185d49;
  font-weight: 700;
  padding: 32rpx 40rpx;
  width: 100%;
  justify-content: space-between;
  user-select: none;
  letter-spacing: 1.5rpx;
}
/* 图标 */
.status-picker-icon {
  margin-right: 28rpx;
  font-size: 50rpx;
  opacity: 0.92;
}
/* 下拉箭头 */
.status-picker-arrow {
  font-size: 38rpx;
  margin-left: 22rpx;
  color: #70b49b;
  font-weight: bold;
  opacity: 0.85;
}

/* 滚动窗 */
.reservation-scroll {
  width: 100%;
  box-sizing: border-box;
  /* 优化滚动流畅性 */
  will-change: transform;
  backface-visibility: hidden;
  /* 减少阴影渲染卡顿 */
  contain: paint;
  transform: translateZ(0);
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

/* 预约卡片 */
.reservation-card {
  width: 92vw;
  margin: 0 auto 18rpx auto;
  background: #fff;
  border-radius: 28rpx;
  box-shadow: 0 6rpx 28rpx 0 #9ec1b233;
  border: 2rpx solid #e2f5ef;
  padding: 0;
  transition: box-shadow 0.21s, transform 0.17s;
  position: relative;
  overflow: hidden;
  display: block;
  /* 渲染优化 */
  will-change: transform, opacity;
  animation: cardFadeIn 0.44s cubic-bezier(0.33,1.34,0.6,1) both;
}
/* 卡片淡入动画关键帧 */
@keyframes cardFadeIn {
  from { opacity: 0; transform: translateY(40rpx) scale(0.96);}
  to { opacity: 1; transform: none;}
}
/* 按下时动画 */
.reservation-card:active {
  box-shadow: 0 12rpx 38rpx 0 #44e09e44;
  transform: scale(1.01);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background: linear-gradient(90deg, #e2f7ef 50%, #fff 100%);
  padding: 32rpx 44rpx 16rpx 44rpx;
  border-bottom: 1.5rpx solid #eaf7f0;
  position: relative;
}
/* 时间行布局 */
.reservation-date-row {
  display: flex;
  align-items: center;
  flex-direction: row;
  gap: 16rpx;
}
.reservation-date-icon {
  font-size: 42rpx;
  margin-right: 4rpx;
}
.reservation-date-text {
  font-size: 46rpx;
  color: #198769;
  font-weight: 700;
  letter-spacing: 1.5rpx;
}

/* 卡片主体 */
.card-body {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  gap: 44rpx;
  padding: 32rpx 44rpx 22rpx 44rpx;
  background: #fcfcff;
}
/* 时间线 */
.card-timeline {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50rpx;
  min-width: 50rpx;
  margin-right: 28rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
  position: relative;
}
.timeline-dot {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: #44e09e;
  border: 4rpx solid #fff;
  box-shadow: 0 1rpx 8rpx 0 #44e09e22;
  z-index: 2;
}
.timeline-dot.start {
  background: #2ca97c;
  margin-bottom: 14rpx;
}
.timeline-dot.end {
  background: #0a7b4e;
  margin-top: 14rpx;
}
.timeline-line {
  width: 8rpx;
  flex: 1;
  background: linear-gradient(to bottom, #2ca97c 0%, #0a7b4e 100%);
  margin: 0 auto;
  border-radius: 4rpx;
  z-index: 1;
  min-height: 50rpx;
}

/* 出发地和目的地 */
.location-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 40rpx;
}
.location-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 24rpx;
  min-width: 0;
}
.location-label {
  font-size: 36rpx;
  font-weight: 600;
  margin-right: 16rpx;
  letter-spacing: 1.5rpx;
}
.start-label {
  color: #2ca97c;
}
.end-label {
  color: #0a7b4e;
}
.location-content {
  font-size: 46rpx;
  color: #185d49;
  font-weight: 800;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 20rpx 0 20rpx;
  color: #b1c9bf;
  animation: fadeIn 0.7s;
}
/* 空状态淡入关键帧 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(30rpx);}
  to { opacity: 1; transform: none;}
}
.empty-text {
  font-size: 40rpx;
  font-weight: 700;
  color: #2ca97c;
  margin-top: 18rpx;
  letter-spacing: 2rpx;
}

/* 小品适配 */
@media (max-width: 750px) {
  .status-picker {
    width: 98vw;
    font-size: 36rpx;
    min-height: 80rpx;
  }
  .status-picker-display {
    font-size: 32rpx;
    padding: 20rpx 14rpx;
  }
  .status-picker-icon {
    font-size: 36rpx;
    margin-right: 16rpx;
  }
  .status-picker-arrow {
    font-size: 26rpx;
  }
  .reservation-card {
    width: 98vw;
    padding: 0;
  }
  .card-header,
  .card-body {
    padding-left: 18rpx;
    padding-right: 18rpx;
  }
  .reservation-date-row .reservation-date-icon {
    font-size: 28rpx;
  }
  .reservation-date-row .reservation-date-text {
    font-size: 32rpx;
  }
  .location-label {
    font-size: 28rpx;
  }
  .location-content {
    font-size: 36rpx;
  }
  .empty-text {
    font-size: 30rpx;
  }
}

.status-filter-container {
  padding: 15rpx 30rpx;
  background-color: #fff;
}

.status-filter {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
}

.filter-text {
  font-size: 28rpx;
  color: #333;
}

.filter-icon {
  width: 24rpx;
  height: 24rpx;
}