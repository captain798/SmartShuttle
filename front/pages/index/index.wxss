/** 页面基础样式 **/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/** 地点选择区域样式 - 优化固定高度 **/
.location-picker {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.location-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
}

/** 地点选择区域样式 **/
.location-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.label {
  font-size: 28rpx;
  color: #000000;
  margin-bottom: 10rpx;
}

.location-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  margin-top: 8rpx;
  text-align: center;
  min-width: 180rpx;
}

.value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.date-picker {
  margin: 10rpx 20rpx 0rpx 20rpx;  
  padding: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-label {
  color: #666;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.selected-date {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  flex: 1;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

/* 班次列表容器样式 */
.scrollarea {
  background-color: #f5f5f5;     /* 设置背景色 */
}

/* 班次列表外层容器 */
.container {
  padding: 0 20rpx 20rpx 20rpx; /* 添加左右内边距 */
  display: flex;                /* 弹性布局 */
  flex-direction: column;       /* 垂直排列 */
  align-items: center;          /* 水平居中 */
}

/* 单个班次卡片样式 */
.schedule-item {
  margin: 20rpx 0;             /* 保持上下边距 */
  padding: 30rpx 20rpx;       /* 保持内边距 */
  background: #ffffff;    
  width: 100%;                /* 改为100%宽度 */
  max-width: 650rpx;          /* 添加最大宽度限制 */
  box-sizing: border-box;     /* 包含padding */
  border-radius: 16rpx;        /* 圆角16rpx */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); /* 添加阴影效果 */
}

/* 时间信息区域样式 */
.time-info {
  display: flex;                /* 弹性布局 */
  align-items: center;         /* 垂直居中 */
}

.time-item text {
  font-size: 28rpx;            /* 字体大小28rpx */
  color: #333;                 /* 文字颜色深灰 */
  font-weight: bold;           /* 加粗显示 */
}

/* 路线信息区域样式 */
.route-info {
  margin-top: 10rpx;           /* 上边距10rpx */
}

.route-name {
  font-size: 32rpx;            /* 字体稍大 */
  color: #333;                 /* 文字颜色深灰 */
}

/* 座位信息区域样式 */
.seats-info {
  margin-top: 10rpx;           /* 上边距10rpx */
}

.seats-info text {
  font-size: 26rpx;            /* 字体稍小 */
  color: #666;                 /* 文字颜色灰色 */
}

/* 按钮区域样式 */
.button-area {
  margin-top: 20rpx;           /* 上边距20rpx */
  display: flex;               /* 弹性布局 */
  justify-content: flex-end;   /* 右对齐 */
}

/* 按钮基础样式 */
button {
  min-width: 120rpx;           /* 最小宽度 */
  height: 60rpx;               /* 固定高度 */
  line-height: 60rpx;          /* 行高等于高度实现垂直居中 */
  border-radius: 30rpx;        /* 圆角按钮 */
}

/* 预约按钮样式 */
button[type="primary"] {
  background-color: #07c160;   /* 微信绿色 */
}

/* 取消预约按钮样式 */
button[type="warn"] {
  background-color: #f5222d;   /* 警告红色 */
  color: #feffff; 
}