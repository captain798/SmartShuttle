/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.location-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
}
.schedule-item {
  padding: 20rpx;
  margin: 10rpx 0;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width : 80%;
}
/* 定义班车预约卡片样式 */
.location-picker {
  padding: 20rpx;
  margin: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.swap-button {
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.location-item text {
  margin: 2px 0;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.time-area {
  flex: 1;
}

.seats-area {
  flex: 1;
  text-align: center;
}

.button-area {
  flex: 1;
  text-align: right;
}

.date-picker {
  margin: 15rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}

.date-label {
  color: #666;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.selected-date {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

/* 优化班次项样式 */
.schedule-item {
  margin: 10px;
  padding: 15px;
  border-radius: 8px;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

/* 优化时间区域样式 */
.time-area {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
  font-size: 16px;
  font-weight: bold;
}

/* 优化座位信息样式 */
.seats-info {
  color: #666;
  margin: 8px 0;
}

/* 优化按钮区域样式 */
.button-area {
  text-align: right;
}

/* 添加状态标签样式 */
.status-tag {
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 12px;
  margin-left: 8px;
}