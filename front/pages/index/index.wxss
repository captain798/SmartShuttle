/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.location-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
}

.location-display text {
  font-size: 16px;
}
.schedule-item {
  padding: 20rpx;
  margin: 10rpx 0;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
