/* 页面背景 */
.page-bg {
  min-height: 100vh;
  background: linear-gradient(135deg, #f6fbf9 0%, #e6f2ef 100%);
}
/* 主内容容器 */
.container {
  padding: 40rpx 0 100rpx 0;
  max-width: 98vw;
  margin: 0 auto;
  box-sizing: border-box;
}

/* 间隔 */
.spacer {
  height: 32rpx;
  width: 100%;
  background: transparent;
}

/* ===== 信息卡片 ===== */
.info-card-cug {
  width: 92vw;
  margin: 0 auto 36rpx auto;
  background: linear-gradient(120deg, #44e09e 0%, #0a7b4e 100%);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 36rpx 0 rgba(11, 94, 60, 0.12);
  display: flex;
  flex-direction: row;
  align-items: stretch;
  position: relative;
  padding: 42rpx 0 42rpx 0;
  min-height: 220rpx;
  overflow: hidden;
  transition: box-shadow 0.17s;
  cursor: pointer;
  animation: infoFadeIn 0.5s;
}
/* 卡片淡入动画 */
@keyframes infoFadeIn {
  0% { opacity: 0; transform: translateY(20rpx);}
  100% { opacity: 1; transform: none;}
}
/* 卡片左侧内容 */
.info-card-cug-main {
  flex: 2.5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 0 0 58rpx;
}
/* 卡片标题 */
.info-cug-title {
  font-size: 40rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', 'Helvetica Neue', Arial, sans-serif;  /* 字体族 */
  font-weight: 800;
  color: #fff;
  letter-spacing: 2rpx;
  line-height: 1.3;
  text-shadow: 0 2rpx 10rpx #0B5E3C33;
  margin-bottom: 20rpx;
  margin-top: 5rpx;
  transition: color 0.2s;
}
/* 学号与姓名信息 */
.info-cug-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 2rpx;
}
/* 学号与姓名样式 */
.info-cug-role,
.info-cug-name {
  font-size: 28rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', 'Helvetica Neue', Arial, sans-serif;
  color: #eafff7;
  font-weight: 700;
  letter-spacing: 1.5rpx;
  line-height: 2.0;
  text-shadow: 0 1rpx 6rpx #0B5E3C44;
  opacity: 0.92;
}
/* 二维码 */
.info-card-cug-qr {
  flex: 1.15;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 36rpx;
}
/* 二维码外层容器 */
.qr-outer {
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 16rpx #0B5E3C22;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
  transition: box-shadow 0.17s, transform 0.13s;
}
/* 信息卡片按下时二维码高亮 */
.info-card-cug:active .qr-outer {
  box-shadow: 0 3rpx 32rpx #0B5E3C33;
  transform: scale(1.02);
}
/* 二维码图片 */
.info-cug-qr-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 24rpx;
  background: rgba(255,255,255,0.12);
  box-shadow: 0 6rpx 24rpx #0B5E3C22;
  object-fit: contain;
  transition: box-shadow 0.17s, transform 0.13s;
}
/* 二维码按下放大 */
.info-cug-qr-img:active {
  box-shadow: 0 12rpx 36rpx #0B5E3C33;
  transform: scale(1.05);
}

/* ===== 横向绿色菜单卡片 ===== */
.menu-card {
  background: #fff;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 18rpx 0 #0B5E3C13;
  margin-bottom: 32rpx;
  padding: 18rpx 0 0 0;
  width: 92vw;
  margin-left: auto;
  margin-right: auto;
  animation: menuFadeIn 0.5s 0.1s backwards;
}
/* 菜单淡入动画 */
@keyframes menuFadeIn {
  0% { opacity: 0; transform: translateY(24rpx);}
  100% { opacity: 1; transform: none;}
}
/* 菜单列表 */
.menu-list-horizontal {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  padding: 0 12rpx 0 12rpx;
}
/* 单项 */
.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 18rpx 0 24rpx 0;
  transition: background 0.16s, box-shadow 0.14s;
  min-width: 0;
  border-radius: 14rpx;
  cursor: pointer;
}
/* 单项按下高亮 */
.menu-item:active {
  background: #e2f7ed;
  box-shadow: 0 2rpx 6rpx #3DC98933;
}
/* 图标 */
.menu-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 7rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #e8fff3 35%, #e6f7f1 100%);
  box-shadow: 0 1rpx 8rpx 0 rgba(61,201,137,0.07);
}
/* 菜单文字 */
.menu-text {
  font-size: 26rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', 'Helvetica Neue', Arial, sans-serif;
  color: #12794b;
  font-weight: 700;
  margin-top: 2rpx;
  letter-spacing: 0.8rpx;
  line-height: 1.2;
  word-break: keep-all;
  opacity: 0.93;
}

/* ===== 小屏自适应菜单字体与布局 ===== */
@media screen and (max-width: 350px) {
  .menu-card { width: 99vw; }
  .menu-list-horizontal { padding: 0 2rpx; }
  .menu-icon { width: 38rpx; height: 38rpx; }
  .menu-text { font-size: 18rpx; }
  .info-card-cug { width: 99vw; }
}