/* 容器样式 */
.container {
  padding: 20rpx;
}

/* 卡片标题样式 */
.card-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

/* 信息项样式 */
.info-item {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

/* 学生信息卡片样式，使其宽度占满父容器 */
.student-card {
  width: 100%;
  background-color: #a3d6ee; 
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  box-sizing: border-box; /* 确保内边距和边框包含在宽度内 */
  margin-bottom: 30rpx;
}

/* 图标栏样式 */
.icon-bar {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

/* 图标项样式 */
.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 图标样式 */
.icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}