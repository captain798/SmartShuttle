/* 容器样式 */
.container {
  padding: 20rpx;
}

/* 学生信息卡片样式 */
.student-card.student-row {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx;
  width: 100%;
  background-color: #a3d6ee; 
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

/* 头像样式 */
.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: #fff;
  border: 3rpx solid #d5eaf6;
  object-fit: cover;
  margin-right: 32rpx;
  box-shadow: 0 2rpx 8rpx 0 rgba(0,0,0,0.05);
}

/* 信息区域 */
.student-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 信息项样式 */
.info-item {
  font-size: 34rpx;
  color: rgb(7, 6, 6);
  margin-bottom: 10rpx;
  display: block;
}

/* 图标表单卡片 */
.form-card {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.08);
  padding: 32rpx 18rpx 22rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

/* 功能项列表 */
.action-list {
  display: flex;
  flex-direction: column;
  gap: 1rpx;
}

/* 单个功能项样式 */
.action-item {
  display: flex;
  align-items: center;
  padding: 24rpx 12rpx;
  border-bottom: 1px solid #f1f1f1;
  background: transparent;
  cursor: pointer;
  position: relative;
  transition: background .16s;
}
.action-item:last-child {
  border-bottom: none;  /* 最后一项去掉下边线 */
}
/* 按下背景高亮 */
.action-item:active {
  background: #f6fafd;
}
/* 功能项图标样式 */
.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 22rpx;
  flex-shrink: 0;
}
/* 功能项文字样式 */
.action-text {
  font-size: 32rpx;
  color: #232a32;
  flex: 1;
  font-weight: 500;
}
/* 箭头样式 */
.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 18rpx;
  opacity: 0.5;  /* 半透明 */
  flex-shrink: 0;  /* 箭头不缩小 */
}