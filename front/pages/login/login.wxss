/* pages/login/login.wxss */
/* 整体容器 */
.container {
  min-height: 100vh;  /* 确保容器高度至少为屏幕高度 */
  padding: 0 40rpx;  /* 上下左右两侧内边距 */
  background: linear-gradient(135deg, #20e3b2 0%, #0dbb8b 100%);
  display: flex;
  flex-direction: column;  /* 按列排 */
  align-items: center;  /* 水平居中对齐 */
  justify-content: flex-start;  /* 垂直方向顶部对齐 */
}

/* 标题 */
.title {
  font-size: 54rpx;
  color: #fff;
  font-weight: 700;
  margin: 40rpx 0 0 0;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.10);
}

/* logo加大，padding变小，margin适中 */
.logo {
  background: #fff;
  border-radius: 50%;
  padding: 10rpx;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 24rpx 0 rgba(16, 154, 98, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: box-shadow 0.25s;
}
.logo-img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  object-fit: cover;
  transition: transform 0.18s;
  box-shadow: 0 2rpx 10rpx rgba(16,154,98,0.05);
}
.logo:hover .logo-img {
  transform: scale(1.08);
}

/* 表单卡片适当下移，居中感更好 */
.form-wrap {
  width: 96vw;
  max-width: 700rpx;
  background: #fff;
  border-radius: 36rpx;
  padding: 56rpx 32rpx 38rpx;
  margin-top: 0;
  margin-bottom: 0;
  box-shadow: 0 10rpx 36rpx 0 rgba(16, 154, 98, 0.12);
  display: flex;
  flex-direction: column;
  gap: 0;
  animation: fadeInUp 0.7s cubic-bezier(.32,.72,.37,1.2);
}

/* 其余表单、输入项等样式保持不变 */

.input-item {
  display: flex;
  align-items: center;
  background: #f7fafc;
  border-radius: 18rpx;
  border: 1.5rpx solid #e5e9ef;
  padding: 0 28rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 1rpx 4rpx rgba(7, 113, 67, 0.03) inset;
  transition: border-color .2s, background .2s;
  height: 88rpx;
}
.input-item:focus-within {
  border-color: #0dbb8b;
  background: #f1fff7;
}
.input-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 18rpx;
  opacity: .74;
}
.input-field {
  flex: 1;
  height: 88rpx;
  font-size: 36rpx;
  color: #2d3a4b;
  background: transparent;
  border: none;
  outline: none;
  border-radius: 0 18rpx 18rpx 0;
  padding-left: 8rpx;
}
.input-field::placeholder, .placeholder {
  color: #bac3ce;
  font-size: 36rpx;
  opacity: .8;
  font-weight: 400;
}
.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 52rpx;
  border-radius: 20rpx;
  background: linear-gradient(90deg, #19ca7d 70%, #11c3a0 100%);
  color: #fff;
  font-size: 42rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  margin: 22rpx 0 18rpx;
  box-shadow: 0 2rpx 12rpx rgba(25,170,98,0.11);
  border: none;
  transition: all 0.18s;
}
.login-btn:active,
.login-btn:focus,
.login-btn:hover {
  opacity: 0.93;
  transform: translateY(-2rpx) scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(25,170,98,0.13);
}
.form-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}
.checkbox-label {
  display: flex;
  align-items: center;
  cursor: pointer;
  gap: 8rpx;
}
.checkbox {
  width: 36rpx;
  height: 36rpx;
  border-radius: 7rpx;
  background: #e4f7ec;
  border: 1.5rpx solid #19aa62;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: border-color .2s, background .2s;
}
.checkbox[checked], .checkbox.checked {
  background-color: #19aa62;
  border-color: #19aa62;
}
.checkbox[checked]::after, .checkbox.checked::after {
  content: "";
  display: block;
  width: 16rpx;
  height: 8rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg);
  position: absolute;
  left: 7rpx;
  top: 12rpx;
}
.checkbox-text {
  color: #232a32;
  font-size: 32rpx;
  margin-left: 9rpx;
  font-weight: 500;
}
.forgot-password {
  color: #18b97c;
  font-size: 32rpx;
  font-weight: 600;
  text-decoration: underline;
  cursor: pointer; 
  transition: color .18s;
}
.forgot-password:hover {
  color: #0a8651;
}
@media (max-width: 700px) {
  .form-wrap {
    width: 98vw;
    padding: 40rpx 12rpx 24rpx;
    border-radius: 18rpx;
  }
  .logo-img {
    width: 300rpx;
    height: 300rpx;
  }
  .title {
    font-size: 48rpx;
    margin-top: 100rpx;
  }
}

/* 动画样式 */
@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
.fade-in {
  opacity: 0;
  animation: fadeInUp 0.75s cubic-bezier(.32,.72,.37,1.2) forwards;
}