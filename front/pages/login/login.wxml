<!--pages/login/login.wxml-->
<view class="container">
  <view class="title fade-in" style="animation-delay: 0.1s;">武汉大学智约班车</view>
  <view class="logo fade-in" style="animation-delay: 0.4s;">
    <image src="/images/WHU.png" mode="aspectFit" class="logo-img"/>
  </view>
  <form class="form-wrap fade-in" style="animation-delay: 0.7s;">
    <view class="input-item fade-in"  style="animation-delay: 0.9s;">
      <image src="/images/用户.png" class="input-icon" />
      <input type="password" placeholder="姓名" placeholder-class="placeholder" class="input-field"
        bindinput="onNameInput" value="{{name}}" />
    </view>
    <button class="login-btn" bindtap="login">登录</button>
    <view class="form-bottom">
      <label class="checkbox-label">
        <checkbox checked="{{true}}" />
        <text class="checkbox-text">近期免登录</text>
      </label>
      <text class="forgot-password">忘记密码？</text>
    </view>
  </form>
</view>