<navigation-bar title="预约记录" back="{{true}}" color="black" background="#FFF"></navigation-bar>

<view class="container">

  <!-- 预约列表展示，使用卡片式布局，可滑动 -->
  <scroll-view wx:if="{{reservationList.length > 0}}" class="reservation-list" scroll-y style="height: 80vh;">
    <block wx:for="{{reservationList}}" wx:key="id">
      <view class="reservation-card">
        <view class="card-header">
          <text class="item-title">预约时间: {{item.reservationTime}}</text>
        </view>
        <view class="card-body">
          <!-- 修改样式使出发地居左，目的地居右 -->
          <text class="item-content start-location">出发地: {{item.startLocation}}</text>
          <text class="item-content end-location">目的地: {{item.endLocation}}</text>
        </view>
      </view>
    </block>
  </scroll-view>

  <view wx:else class="no-data">
    <text>暂无预约记录</text>
  </view>
  
</view>
