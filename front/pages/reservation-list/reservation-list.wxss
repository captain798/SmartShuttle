/* 加载动画样式 */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 卡片式布局样式 */
.reservation-card {
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
}

.card-body {
  color: #666;
}

/* 无数据提示样式 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.no-data-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.animated {
  animation: shake 1.5s infinite;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

